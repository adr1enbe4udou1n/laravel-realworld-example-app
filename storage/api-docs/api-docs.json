{
    "openapi": "3.0.0",
    "info": {
        "title": "Conduit API",
        "description": "Conduit is a social blogging site (like Medium) built on top of Laravel. This is the API backend.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Conduit API server"
        }
    ],
    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get recent articles globally.",
                "description": "Get most recent articles globally. Use query parameters to filter results. Auth is optional",
                "operationId": "GetArticles",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit number of articles returned (default is 20)",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Offset/skip number of articles (default is 0)",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tag",
                        "in": "query",
                        "description": "Filter by tag"
                    },
                    {
                        "name": "author",
                        "in": "query",
                        "description": "Filter by author (username)"
                    },
                    {
                        "name": "favorited",
                        "in": "query",
                        "description": "Filter by favorites of a user (username)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MultipleArticlesResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Articles"
                ],
                "summary": "Create an article.",
                "description": "Create an article. Auth is required",
                "operationId": "CreateArticle",
                "requestBody": {
                    "description": "Article to create",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewArticleRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SingleArticleResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorValidationResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "scalar": "BearerToken"
                    }
                ]
            }
        },
        "/articles/feed": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get recent articles from users you follow.",
                "description": "Get most recent articles from users you follow. Use query parameters to limit. Auth is required",
