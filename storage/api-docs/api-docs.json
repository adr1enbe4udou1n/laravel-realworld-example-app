                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit number of articles returned (default is 20)",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Offset/skip number of articles (default is 0)",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MultipleArticlesResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "scalar": "BearerToken"
                    }
                ]
            }
        },
